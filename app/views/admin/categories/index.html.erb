<div>
  <header class="page-header">
    <h1>Admin: Categories</h1>
  </header>

  <div>
    <%= link_to 'New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>
  <br>
  <div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
          <th>Number of products in category</th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
  </div>
</div>
